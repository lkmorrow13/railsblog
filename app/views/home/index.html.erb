<div class="container marginTop">
	<div class="row postbackground">
		<div class="col-8 offset-2 postformpadding">
			<h1 class="text-center">Start A Discussion</h1>
			<%= form_with model: @post, local: true do |f| %>
				<div class="form-group">
					<!-- <label for="Title"></label> -->
					<%= f.text_field :title, placeholder: 'Title', class: 'form-control' %>
				</div>
				<div class="form-group">
					<!-- <label for="Image Url"></label> -->
					<%= f.text_field :img, placeholder: 'Image Url', class: 'form-control' %>
				</div>
				<div class="form-group">
					<!-- <label for="Content"></label> -->
					<%= f.text_area :content, placeholder: 'Content', class: 'form-control' %>
				</div>
				<%= f.submit class: 'btn btn-danger' %>
			<% end %>
		</div>
	</div>
</div>
<div class="container marginTop">
	<div class="row postbackground">
		<div class="col-8 offset-2 postformpadding">
			<h1 class="text-center">Most Recent Discussions</h1>
			<div class="posts">
				<%= render @posts %>
			</div>
		</div>
	</div>
</div>