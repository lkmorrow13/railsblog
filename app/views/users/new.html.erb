<div class="container greybackground marginTop">
	<div class="row">
		<div class="col-8 offset-2 postformpadding">
			<h1 class="text-center">Sign Up</h1>
			<%= form_with model: @user, data: {'parsley-validate': ''}, local: true do |f| %>
				<div class="form-group">
					<%= f.label :first_name %>
					<%= f.text_field :first_name, required: true, placeholder: 'First Name', class: 'form-control' %>
				</div>
				<div class="form-group">
					<%= f.label :last_name %>
					<%= f.text_field :last_name, required: true, placeholder: 'Last Name', class: 'form-control' %>
				</div>
				<div class="form-group">
					<%= f.label :img %>
					<%= f.text_field :img, placeholder: 'Image Url', class: 'form-control' %>
				</div>
				<div class="form-group">
					<%= f.label :email %>
					<%= f.email_field :email, required: true, placeholder: 'Email', class: 'form-control' %>
				</div>
				<div class="form-group">
					<%= f.label :password %>
					<%= f.password_field :password, placeholder: 'Password', class: 'form-control' %>
				</div>
				<%= f.submit class: 'btn btn-danger' %>
			<% end %>
		</div>
	</div>
</div>